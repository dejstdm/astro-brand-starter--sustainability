---
import SusButton from "../../components/prod/SusButton.astro";
import ProdLayout from "../../layouts/ProdLayout.astro";
---

<ProdLayout title="Component List - Dev">
  <div style="padding: 2rem;">
    <div class="sus-container">
      <h1 class="sus-headline-1">Component List</h1>
    </div>
    
    <div style="margin: 2rem 0;">
      <div class="sus-container">
        <h2 class="sus-headline-3">Container Variants</h2>
      </div>
      <div style="display: flex; flex-direction: column; gap: 1rem; margin: 1rem 0;">
        
        <!-- Default Container -->
        <div style="border: 2px dashed #ccc; padding: 1rem;">
          <h3>Default Container (950px max-width, 20px padding)</h3>
          <div class="sus-container" style="background: #f0f0f0; padding: 1rem;">
            <p>This is the default container with 950px max-width and 20px padding.</p>
          </div>
        </div>

        <!-- Wide Container -->
        <div style="border: 2px dashed #ccc; padding: 1rem;">
          <h3>Wide Container (1080px max-width, 20px padding)</h3>
          <div class="sus-container-wide" style="background: #e0e0e0; padding: 1rem;">
            <p>This is the wide container with 1080px max-width and 20px padding for wider content.</p>
          </div>
        </div>

        <!-- Full Container -->
        <div style="border: 2px dashed #ccc; padding: 1rem;">
          <h3>Full Container (full width, no padding)</h3>
          <div class="sus-container-full" style="background: #d0d0d0; padding: 1rem;">
            <p>This is the full container that takes full width with no padding for full-page layouts.</p>
          </div>
        </div>
      </div>
    </div>
    
    <div style="margin: 2rem 0;">
      <div class="sus-container">
        <h2 class="sus-headline-3">Individual Buttons</h2>
      </div>
      <div style="display: flex; flex-direction: column; gap: 1rem; margin: 1rem 0;">
        <div class="sus-container">
          <!-- Origin button -->
          <SusButton icon="origin-btn-icon.png" text="origin" />
        </div>
        <div class="sus-container">
          <!-- Initiatives button -->
          <SusButton icon="initiatives-btn-icon.png" text="initiatives" />
        </div>
        <div class="sus-container">
          <!-- Packaging button -->
          <SusButton icon="packaging-btn-icon.png" text="packaging" />
        </div>
      </div>
    </div>

    <div style="margin: 2rem 0;">
      <div class="sus-container">
        <h2 class="sus-headline-3">Button Group</h2>
      </div>
      <div class="sus-container">
        <div class="sus-button-group">
          <SusButton icon="origin-btn-icon.png" text="origin" />
          <SusButton icon="initiatives-btn-icon.png" text="initiatives" />
          <SusButton icon="packaging-btn-icon.png" text="packaging" />
        </div>
      </div>
    </div>

    <div style="margin: 2rem 0;">
      <div class="sus-container">
        <h2 class="sus-headline-3">Buttons as Links</h2>
      </div>
      <div style="display: flex; flex-direction: column; gap: 1rem; margin: 1rem 0;">
        <div class="sus-container">
          <!-- Origin button as link -->
          <SusButton href="/origin" icon="origin-btn-icon.png" text="origin" />
        </div>
        <div class="sus-container">
          <!-- Initiatives button as link -->
          <SusButton href="/initiatives" icon="initiatives-btn-icon.png" text="initiatives" />
        </div>
        <div class="sus-container">
          <!-- Packaging button as link -->
          <SusButton href="/packaging" icon="packaging-btn-icon.png" text="packaging" />
        </div>
      </div>
    </div>

    <div style="margin: 2rem 0;">
      <div class="sus-container">
        <h2 class="sus-headline-3">Button Variants as Links</h2>
      </div>
      <div style="display: flex; flex-direction: column; gap: 1rem; margin: 1rem 0;">
        <div class="sus-container">
          <!-- Primary button as link -->
          <SusButton href="/primary" variant="primary" icon="origin-btn-icon.png" text="Primary Link" />
        </div>
        <div class="sus-container">
          <!-- Secondary button as link -->
          <SusButton href="/secondary" variant="secondary" icon="initiatives-btn-icon.png" text="Secondary Link" />
        </div>
      </div>
    </div>

    <div style="margin: 2rem 0;">
      <div class="sus-container">
        <h2 class="sus-headline-3">Button Sizes as Links</h2>
      </div>
      <div style="display: flex; flex-direction: column; gap: 1rem; margin: 1rem 0;">
        <div class="sus-container">
          <!-- Small button as link -->
          <SusButton href="/small" size="small" icon="packaging-btn-icon.png" text="Small Link" />
        </div>
        <div class="sus-container">
          <!-- Large button as link -->
          <SusButton href="/large" size="large" icon="origin-btn-icon.png" text="Large Link" />
        </div>
      </div>
    </div>

    <div style="margin: 2rem 0;">
      <div class="sus-container">
        <h2 class="sus-headline-3">Section Wrapper Demos</h2>
        <p>Check out the section wrapper with background colors and diagonal borders:</p>
        <div style="display: flex; flex-direction: column; gap: 0.5rem; margin-top: 1rem;">
          <a href="/dev/section-demo" style="color: var(--sus-color-primary); text-decoration: underline;">
            Basic Section Demo →
          </a>
          <a href="/dev/sections-demo-initiatives-1" style="color: var(--sus-color-primary); text-decoration: underline;">
            Advanced Section Demo (9 sections with all options) →
          </a>
          <a href="/dev/sections-demo-v2" style="color: var(--sus-color-primary); text-decoration: underline;">
            Section Demo V2 (Clip-Path Method) →
          </a>
        </div>
      </div>
    </div>
  </div>
</ProdLayout>